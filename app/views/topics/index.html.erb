<h1>世界末日災情支援網</h1>


<p><%= link_to "發表文章", new_topic_path() , :class => "btn btn-primary"%></p>




<table class = "table">
  <tr>
      <td><h4>主題</h4></td>
      <td><h4>作者</h4></td>
      <td><h4>分類</h4></td>         
      <td></td>




  </tr>


  <% @topics.each do |t| %>
    <tr>
      <td><h4><%= link_to t.title, topic_path(t)%></h4></td>
      <td>
        <h5><%=t.user.try(:user_name)%></h5>
        <h5><%= t.created_at %></h5>
      </td>
      <td><h4><%= t.category.name%></h4></td>

      <td>
        <%if t.user == current_user %>
          <%= link_to "編輯", edit_topic_path(t) , :class => "btn btn-default"%>
          <%= link_to "刪除", topic_path(t) ,:method => :delete, :class => "btn btn-danger"%>
        <% end %>
      </td>

    </tr>
  <% end %>

</table>
<%= paginate @topics %>